<h2 class = "marginAll">Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:multipart => true} ) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class = "marginAll">
    <div class="form-row">
      <div class="col-md-3 my-auto">
        <%= f.label "Name"%>
      </div>
      <div class="col-md-9">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class = "marginAll">
    <div class="form-row">
      <div class="col-md-3 my-auto">
        <%= f.label "Email address" %>
      </div>
      <div class="col-md-9">
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class = "marginAll">
    <div class="form-row">
      <div class="col-md-3 my-auto">
        <%= f.label "Password" %>
      </div>
      <div class="col-md-9">
        <%= f.password_field :password,  class: "form-control" %>
      </div>
    </div>
  </div>
  <div class = "marginAll">
    <div class="form-row">
      <div class="col-md-3 my-auto">
        <%= f.label "Password Confirmation:" %><br />
      </div>
      <div class="col-md-9">
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class = "marginAll">
    <div class="form-row">
      <div class="col-md-3 my-auto">
        <%= f.label "Billing Day:" %><br />
      </div>
      <div class="col-md-9">
        <%= f.number_field :billing_day, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class = "marginAll">
    <div class="form-row">
      <div class="col-md-3">
        <%= f.file_field :image %>
        <%= f.hidden_field :image_cache%>
      </div>
    </div>
  </div>
  <div class = "marginAll">
    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
<%= render "devise/shared/links" %>